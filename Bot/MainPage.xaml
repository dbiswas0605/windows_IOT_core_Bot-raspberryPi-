<Page
    x:Class="Bot.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Height="305" Margin="10,188,10,275" Width="412">
            <TextBox x:Name="Direction" Text="Press Button!" IsReadOnly="True" Canvas.Left="162" Canvas.Top="154" Width="100" Height="32"/>

            <Button x:Name="ButtonUP" Content="UP"  Canvas.Left="188" Canvas.Top="88" Click="ButtonUP_Click" />
            <Button x:Name="ButtonRight" Content="RIGHT"  Canvas.Left="294" Canvas.Top="154" Click="ButtonRight_Click" />
            <Button x:Name="ButtonLeft" Content="LEFT"  Canvas.Left="81" Canvas.Top="164" Click="ButtonLeft_Click" />
            <Button x:Name="ButtonDown" Content="DOWN"  Canvas.Left="188" Canvas.Top="231" Click="ButtonDown_Click" />
        </Canvas>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="110,498,0,0" VerticalAlignment="Top" Width="243" Height="32" Click="button_Click"/>
    </Grid>
</Page>
